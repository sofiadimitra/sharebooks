<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Code</th>
      <th>Writer</th>
      <!-- <th>Description</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.code %></td>
        <td><%= book.writer %></td>
        <!-- <td><%= book.description %></td> -->
        <!-- <td><%= link_to 'Show', book %></td> -->
        <td><%= link_to 'Reserve', reserve_book_path(book), method: :post %></td>
        <td><%= link_to 'Un-Reserve', unreserve_book_path(book), method: :post %></td>
        <td><%= pluralize(book.reservations.count, "reservations") %></td>
        <!-- <td><%= link_to 'Edit', edit_book_path(book) %></td> -->
        <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

